  "main": "index.php",
  "scripts": {
    "scss": "node-sass scss/styles.scss -o css",
    "autoprefixer": "postcss -u autoprefixer -r css/*",
    "serve": "browser-sync start --proxy localhost/T2week12 --files css/*.css, js/*.js, *.html, *.php, partials/*.php --browser Chrome",
    "buildcss": "npm run scss && npm run autoprefixer",
    "watchcss": "onchange \"scss\" -- npm run buildcss",
    "watchall": "npm-run-all -p serve watchcss"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thisisvana/T2week12.git"
